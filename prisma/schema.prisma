generator client {
  provider = "prisma-client-js"
  binaryTargets = [ "native", "debian-openssl-3.0.x", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  idusers       Int      @id @default(autoincrement())
  username      String   @unique
  password      String
  firstAdmin    Boolean  @default(false)
  creation_date DateTime @default(now())
  last_edit     DateTime @default(now())
  role          String   @default("user")
  email         String?  @default("No email")
  devices       devices[]
}

model devices {
  iddevices     Int      @id @default(autoincrement())
  name          String   @unique
  description   String?  @default("Just a server")
  last_edit     DateTime @default(now())
  is_public     Boolean  @default(true)
  mac           String   @unique
  broadcast     String
  port          Int      @default(9)
  idusers       Int
  users         users    @relation(fields: [idusers], references: [idusers])
}

model system {
  idsystem      Int      @id @default(autoincrement())
  name          String   @default("WOL-RPI")
  api_refresh   Int      @default(3000)
}

model userCode {
  idusercode    Int      @id @default(autoincrement())
  code          String   @unique
  username      String   @unique
  createdAt     DateTime @default(now())
  expiresAt     DateTime?
  role          String   @default("user")
  isActivated   Boolean  @default(false)
}